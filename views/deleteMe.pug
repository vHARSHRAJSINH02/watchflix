extends base

block content
    .user-view__content
        .user-view__form-container
            h2.heading-secondary.ma-bt-md#delete-head Enter your email to delete your account 
            form.form-deleteME
                .form__group.ma-bt-md
                    label.form__label(for='user-email') Email address
                    input#email.form__input(type='email' placeholder='you@example.com'  required)
                button.btn.btn--small.btn--green(id='delete-me' data-id=user.email) Delete me

